<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/hhhh"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/grey"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/b1" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/baseline_add_circle_24"
        app:layout_constraintBottom_toBottomOf="@+id/hhhh"
        app:layout_constraintEnd_toEndOf="@+id/hhhh"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/hhhh"
        app:layout_constraintTop_toTopOf="@+id/hhhh"
        app:layout_constraintVertical_bias="1.0"
        android:background="@drawable/backgradd" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="285dp"
        android:layout_height="143dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@+id/hhhh"
        app:layout_constraintTop_toTopOf="parent">

        <com.example.lorysport.CustomEditText
            android:id="@+id/pname"
            android:layout_width="201dp"
            android:layout_height="42dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="25dp"
            android:background="@android:color/transparent"
            android:cursorVisible="false"
            android:ems="20"
            android:inputType="textPersonName|textCapWords"
            android:maxLines="1"
            android:paddingStart="5dp"
            android:textColor="@color/dark"
            android:textSize="26sp" />

        <com.example.lorysport.CustomEditText
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/transparent"
            android:cursorVisible="false"
            android:maxLines="1"
            android:paddingStart="5dp"
            android:textColor="@color/dark"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/photos"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/hhhh"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/addphoto"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/tab_rounded_pressed"
        android:text="@string/addphoto"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/photos" />
</androidx.constraintlayout.widget.ConstraintLayout>
